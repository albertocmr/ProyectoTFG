---
import NavLinksWrapper from "./NavLinksWrapper.jsx";
---

<header class="px-5 h-16 lg:h-24 mb-10 navbar navbar-expand-md navbar-dark bg-dark shadow-xl">
  <div class="container-fluid p-2">
    <div class="p-2">
      <a href="/">
        <img src="/logo-parktracker.png" style="width: 36px" />
      </a>
    </div>
    <a href="/" class="navbar-brand fs-3 fw-bold">ParkTracker</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <NavLinksWrapper client:only="react" />
    </div>
  </div>
</header>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
